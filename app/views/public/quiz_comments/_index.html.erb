<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>コメント</th>
    </tr>
  </thead>
  <% quiz.quiz_comments.each do |quiz_comment| %>
  <tbody>
    <tr>
      <td><%= quiz_comment.user.name %></td>
      <td><%= quiz_comment.comment %></td>
      <td>
        <% if quiz_comment.user == current_user %>
          <%= link_to "Destroy", quiz_quiz_comment_path(quiz, quiz_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
        <% elsif admin_signed_in? %>
          <%= link_to "Destroy", quiz_quiz_comment_path(quiz, quiz_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
