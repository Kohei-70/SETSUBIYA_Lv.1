<% if quiz.bookmarked_by?(current_user) %>
  <%= link_to quiz_bookmark_path(quiz, current_user.bookmarks.find_by(quiz_id: quiz).id ), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <i class="fa-solid fa-bookmark"></i>
    ブックマーク1
  <% end %>
<% else %>
  <%= link_to quiz_bookmarks_path(quiz), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <i class="fa-regular fa-bookmark"></i>
    ブックマーク2
  <% end %>
<% end %>