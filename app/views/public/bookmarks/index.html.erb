<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-4">ブックマークした問題一覧</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th width="10%">問題ID</th>
            <th width="30%">タグ</th>
            <th width="60%">タイトル</th>
          </tr>
        </thead>
        <% @bookmark_quizzes.each do |quiz| %>
          <tr>
            <td><%= quiz.id %></td>
            <td><%= quiz.tag %></td>
            <td><%= link_to quiz.title, quiz_quiz_bookmark_path(quiz, current_user.bookmarks.find_by(quiz_id: quiz).id ) %></td>
          </tr>
        <% end %>
        <%= paginate @bookmark_quizzes %>
      </table>
    </div>
  </div>
</div>