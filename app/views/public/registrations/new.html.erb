<div class="container address">
  <div class="row">
    <div class="col">
      <h4 class="my-5">新規会員登録</h4>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <tr>
            <td>ユーザー名</td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "username" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>パスワード<% if @minimum_password_length %>（<%= @minimum_password_length %> 文字以上）<% end %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td>パスワード（確認用）</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.submit "新規登録" %></td>
          </tr>
        </table>
      <% end %>
      <h4 class="my-5">既に登録済みの方</h4>
      <h5><%= link_to "こちら", new_user_session_path %>　からログインしてください。</h5>
    </div>
  </div>
</div>