<h6 class="text-right">【タグ】<%= quiz.tag %><br></h6>
<h4>【問題】</h4>
<h5><%= quiz.question %><br><br></h5>
<%= radio_button_tag 'answer', '1', true %>  <%= quiz.answer1 %><br>
<%= radio_button_tag 'answer', '2' %>  <%= quiz.answer2 %><br>
<%= radio_button_tag 'answer', '3' %>  <%= quiz.answer3 %><br>
<%= radio_button_tag 'answer', '4' %>  <%= quiz.answer4 %><br><br>
<%= f.submit '回答', class: 'btn btn-success' %>

<%= f.hidden_field :model, value: @model %>
<%= f.hidden_field :title, value: @quiz_title %>
<%= f.hidden_field :method, value: @method %>

